<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="Telefon" />

                <TextView
                    android:id="@+id/brand31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/brand32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/brand33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Typ" />

                <TextView
                    android:id="@+id/type31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/type32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/type33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="System operacyjny" />

                <TextView
                    android:id="@+id/os31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/os32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/os33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Przekątna wyświetlacza" />

                <TextView
                    android:id="@+id/dispsize31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dispsize32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dispsize33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="Rozdzielczość wyświetlacza" />

                <TextView
                    android:id="@+id/dispres31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dispres32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dispres33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Procesor" />

                <TextView
                    android:id="@+id/proc31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/proc32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/proc33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="RAM" />

                <TextView
                    android:id="@+id/ram31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/ram32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/ram33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Pamięć wbudowana" />

                <TextView
                    android:id="@+id/mem31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mem32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mem33"
                    android:layout_weight="1" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="LTE" />

                <ImageView
                    android:id="@+id/lte31"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/lte32"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/lte33"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Tylni aparat" />

                <LinearLayout android:layout_weight="1">

                    <ImageView
                        android:id="@+id/cam31"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/cam32"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/cam33"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="Rozdzielczość tylnego aparatu" />

                <TextView
                    android:id="@+id/camRes31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/camRes32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/camRes33"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Lampa błyskowa" />

                <ImageView
                    android:id="@+id/led31"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/led32"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/led33"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="Przedni aparat" />

                <LinearLayout android:layout_weight="1">

                    <ImageView
                        android:id="@+id/cam231"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/cam232"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/cam233"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />


            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Rozdzielczość przedniego aparatu" />

                <TextView
                    android:id="@+id/cam2res31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cam2res32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cam2res33"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_weight="1"
                    android:text="Gniazdo mini-jack" />

                <LinearLayout android:layout_weight="1">

                    <ImageView
                        android:id="@+id/jack31"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/jack32"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/jack33"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />

            </TableRow>

            <TableRow android:background="@color/Row2">

                <TextView
                    android:layout_weight="1"
                    android:text="Cena" />

                <TextView
                    android:id="@+id/price31"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/price32"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/price33"
                    android:layout_weight="1" />

            </TableRow>


        </TableLayout>


    </HorizontalScrollView>

</LinearLayout>